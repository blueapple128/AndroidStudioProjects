<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testscreen">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Unit1Activity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.testscreen.MainActivity" />
        </activity>
        <activity
            android:name=".OtherActivity"
            android:parentActivityName=".Unit1Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.testscreen.Unit1Activity" />

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="developer.android.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShoppingListActivity"
            android:parentActivityName=".OtherActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.testscreen.OtherActivity" />
        </activity>
        <activity
            android:name=".HelloActivity"
            android:parentActivityName=".Unit1Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.testscreen.Unit1Activity" />
        </activity>
        <activity android:name=".ScrollActivity" />
        <activity
            android:name=".TestNavigationDrawerActivity"
            android:label="@string/title_activity_test_navigation_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".RandomActivity" />
        <activity
            android:name=".DisplayMessageActivity"
            android:label="@string/display_message_activity_name"
            android:parentActivityName=".Unit1Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.testscreen.Unit1Activity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>